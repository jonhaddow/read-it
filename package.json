{
	"name": "read-it",
	"version": "1.0.0",
	"description": "Store links from across the web",
	"main": "dist/app.js",
	"engines": {
		"node": "14.x"
	},
	"scripts": {
		"dev:client": "webpack serve",
		"dev:server": "nodemon ./src/server/index.ts",
		"dev": "concurrently \"npm:dev-client\" \"npm:dev-server\" -c green,blue",
		"build:client": "webpack --env=production",
		"build:server": "npx tsc --build ./src/server/tsconfig.json",
		"configure:server": "cp -r ./src/server/config/ ./dist/server/",
		"start:server": "node dist/server/index.js",
		"test": "jest"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/jonhaddow/read-it.git"
	},
	"author": {
		"email": "haddowjon@protonmail.com",
		"name": "Jon Haddow",
		"url": "https://jon.haddow.me"
	},
	"license": "MIT",
	"bugs": {
		"url": "https://github.com/jonhaddow/read-it/issues"
	},
	"homepage": "https://github.com/jonhaddow/read-it#readme",
